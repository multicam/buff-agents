{
  "name": "buff-agents",
  "version": "0.1.0",
  "description": "Autonomous coding agent library with base2-style orchestration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "buff-agents": "dist/cli/index.js",
    "buff-agents-mcp": "dist/mcp/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "bun run --watch src/cli/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "tsc --noEmit",
    "bench": "bun run tests/bench/run.ts",
    "clean": "rm -rf dist node_modules",
    "prepublishOnly": "bun run build && bun run build:types"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^12.0.0",
    "openai": "^4.70.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "bun-types": "^1.1.0",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "@google/generative-ai": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "@google/generative-ai": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ai",
    "agent",
    "llm",
    "anthropic",
    "claude",
    "coding-assistant",
    "mcp",
    "cascade"
  ],
  "author": "Jean-Marc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jean-marc/buff-agents"
  }
}
